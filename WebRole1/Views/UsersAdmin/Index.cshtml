@model IEnumerable<ShareCar.Models.User>

@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.Label("Locked")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @if (item.LockoutEndDateUtc != null)
            {
            <td>
                @Html.CheckBox("anything", true, new { @disabled = "disabled" })
            </td>
            }
            @if (item.LockoutEndDateUtc == null)
            {
                <td>
                    @Html.CheckBox("anything", false, new { @disabled = "disabled" })
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("List Roles", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
